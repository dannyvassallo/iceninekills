<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= partial "partials/meta-seo" %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "all" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-71200173-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <!-- Javascripts -->
    <%= javascript_include_tag  "all" %>
    <script>
      // init contest //
      $(".contest").shareContestFB({
        context: {
          fbAppId: "198516403817300",
          fbShareTitle: "Ice Nine Kills - Every Trick In The Book Sweepstakes",
          fbShareLink: "http://www.iceninekills.com",
          fbImageUrl: "https://s3.amazonaws.com/myfangate.com/iceninekills/shareimage.jpg",
          fbSubText: "http://www.iceninekills.com",
          fbDialog: "Win your own Amazon Fire + $100 Amazon gift card to fill it with your favorite classics from 'Every Trick In The Book,' music and more!",
          formActionUrlId: "1pnk41C91N92eL0QDEhemc48p64a58xvbZm1JQDdqt_U",
          firstNameId: "749925490",
          lastNameId: "453795809",
          emailId: "1493557255",
          optInId: "583147646",
          rulesId: "1082888376",
          fbCheckId: "701792494",
          twitterCheckId: "1730686214",
          contactName: "Fearless Records",
          rulesLink: "http://google.com",
          thankYouMsg: "Thanks for entering!",
        }
      });


      // contest mover
      function checkScreen(){
        var docW = $(document).width();
        if(docW < 1440){
          jQuery('.contest').detach().appendTo('.contest-mobile');
        } else {
          // alert('woot');
          jQuery('.contest').detach().appendTo('.contest-wrap');
        }
      }

      $(function(){
        checkScreen();
      });

      $(window).resize(function(){
        checkScreen();
      });


    </script>
  </body>
</html>
